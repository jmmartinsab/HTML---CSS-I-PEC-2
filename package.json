{
  "name": "htmlcss",
  "version": "1.0.0",
  "description": "A bundler for HTML & CSS I at UOC",
  "main": "index.html",
  "scripts": {
    "parcel:dev": "parcel dev src/index.html -p 8080 --open",
    "parcel:build": "parcel build src/index.html",
    "clean": "rimraf dist .cache .cache-loader",
    "dev": "npm-run-all clean parcel:dev",
    "build": "npm-run-all clean parcel:build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "José Manuel Martín",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.3",
    "hamburgers": "^1.1.3",
    "parcel": "^1.12.3",
    "sass": "^1.32.12"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "autoprefixer": "^9.8.6",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.7.1"
  }
}
